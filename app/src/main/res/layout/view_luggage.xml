<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb">

    <!-- Upper area with color #303030 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#303030" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Luggage"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Bag 1 -->
    <Button
        android:id="@+id/buttonBag1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="BAG_Name 1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Bag 1 Details (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutBag1Details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- Add Details for Bag 1 Here -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details for Bag 1"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Add more details here -->

    </LinearLayout>

    <!-- Bag 2 -->
    <Button
        android:id="@+id/buttonBag2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="BAG_Name 2"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Bag 2 Details (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutBag2Details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- Add Details for Bag 2 Here -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details for Bag 2"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Add more details here -->

    </LinearLayout>

    <!-- Bag 3 -->
    <Button
        android:id="@+id/buttonBag3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="BAG_Name 3"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Bag 3 Details (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutBag3Details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- Add Details for Bag 3 Here -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details for Bag 3"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Add more details here -->

    </LinearLayout>

    <!-- Back button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO PREVIOUS MENU"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Lower area with color #303030 (Moved to the end) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#303030" />

</LinearLayout>
