<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96ECEC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topmargin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@color/teal_700"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottommargin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/teal_700"
        />

    <TextView
        android:id="@+id/account_creation_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Account creation failed"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_creation_failed"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:text="It seems that this email is already associated with another account."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="220dp"
        android:backgroundTint="#BBE5EA"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:shadowColor="#03D9C4"
        android:text="Login"
        android:textAlignment="gravity"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details"
        android:layout_alignRight="@id/login_button"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="110dp"
        android:backgroundTint="#BBE5EA"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:shadowColor="#03D9C4"
        android:text="Return"
        android:textAlignment="gravity"
        android:textColor="@color/black" />

</RelativeLayout>