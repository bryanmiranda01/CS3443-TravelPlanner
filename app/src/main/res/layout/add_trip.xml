<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="LabelFor">

    <ImageButton
        android:id="@+id/back_itin"
        android:layout_width="84dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/dark_blue"
        android:contentDescription="@string/back_btn"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow"
        android:translationZ="90dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <TextView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/destination"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:text="@string/add_trip"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ans_dest"
        android:fontFamily="serif"
        android:text="@string/destination"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_trip" />

    <EditText
        android:id="@+id/ans_dest"
        android:inputType="text"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_above="@+id/hotel_address"
        android:hint="@string/enter_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination" />

    <TextView
        android:id="@+id/hotel_address"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ans_hotel"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:text="@string/hotel_address"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_dest" />

    <EditText
        android:id="@+id/ans_hotel"
        android:inputType="text"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_above="@+id/city_country"
        android:hint="@string/enter_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_address" />

    <TextView
        android:id="@+id/city_country"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ans_cc"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:text="@string/city_country"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_hotel" />

    <EditText
        android:id="@+id/ans_cc"
        android:inputType="text"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_above="@+id/start_date"
        android:hint="@string/enter_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_country" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ans_start"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:text="@string/start_date"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_cc" />

    <EditText
        android:id="@+id/ans_start"
        android:inputType="text"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_above="@+id/end_date"
        android:hint="@string/enter_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_date" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ans_end"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:text="@string/end_date"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_start" />

    <EditText
        android:id="@+id/ans_end"
        android:inputType="text"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_above="@+id/transport"
        android:hint="@string/enter_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_date" />

    <TextView
        android:id="@+id/transport"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ans_transp"
        android:layout_marginTop="3dp"
        android:text="@string/transportation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_end" />

    <EditText
        android:id="@+id/ans_transp"
        android:inputType="text"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_above="@+id/done_itin"
        android:hint="@string/enter_information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transport" />

    <Button
        android:id="@+id/done_itin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/aqua"
        android:contentDescription="@string/next_btn"
        android:gravity="center_horizontal"
        android:text="@string/done_btn"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bot_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bot_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>