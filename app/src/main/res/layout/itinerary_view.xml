<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.TravelPlanner.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itinerary_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="25dp"
            android:background="@color/dark_blue"
            android:fontFamily="monospace"
            android:text="@string/menu_itinerary"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            android:translationZ="120dp" />

        <TextView
            android:id="@+id/itin_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_placeholder"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/loc_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/date_placeholder"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bot_bar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="527dp"
            android:background="@color/off_white"
            android:text="@string/date_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/act_placeholder1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/date_placeholder"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="-300dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="44dp"
            android:background="@color/light_blue"
            android:text="@string/act_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/act_placeholder2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_placeholder1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="44dp"
            android:background="@color/light_blue"
            android:text="@string/act_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/act_placeholder3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_placeholder2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="44dp"
            android:background="@color/light_blue"
            android:text="@string/act_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/act_placeholder4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_placeholder3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="208dp"
            android:background="@color/light_blue"
            android:text="@string/act_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/act_placeholder5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_placeholder4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="-180dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="250dp"
            android:background="@color/light_blue"
            android:text="@string/act_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="591dp"
            android:layout_marginEnd="341dp"
            android:layout_marginBottom="122dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="378dp"
            android:layout_marginEnd="341dp"
            android:layout_marginBottom="335dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />


        <ImageView
            android:id="@+id/star3"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="535dp"
            android:layout_marginEnd="344dp"
            android:layout_marginBottom="178dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="483dp"
            android:layout_marginEnd="341dp"
            android:layout_marginBottom="230dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="433dp"
            android:layout_marginEnd="341dp"
            android:layout_marginBottom="280dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <TextView
            android:id="@+id/bot_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/dark_blue" />

        <ImageView
            android:contentDescription="@string/placeholder"
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="117dp"
            android:layout_above="@+id/act_placeholder1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="360dp"
            app:srcCompat="@drawable/placeholder_image" />

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:contentDescription="@string/button"
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:contentDescription="@string/button"
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="200dp"
        app:srcCompat="@drawable/luggage" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>