<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-66dp">

        <TextView
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="146dp"
            android:background="@color/dark_blue" />

        <TextView
            android:id="@+id/select_trip"
            android:layout_width="340dp"
            android:layout_height="51dp"
            android:layout_above="@+id/itinerary1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="65dp"
            android:background="@color/dark_blue"
            android:fontFamily="serif"
            android:text="@string/select_itin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/itinerary1"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itinerary2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="25dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/loc_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itinerary2"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itinerary3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="25dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/loc_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itinerary3"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nextbutton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="100dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/loc_placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="263dp"
            android:layout_marginEnd="354dp"
            android:layout_marginBottom="449dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="381dp"
            android:layout_marginEnd="352dp"
            android:layout_marginBottom="331dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="321dp"
            android:layout_marginEnd="354dp"
            android:layout_marginBottom="391dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="182dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="115dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="165dp"
            android:background="@color/dark_blue"
            android:contentDescription="@string/next_btn"
            android:gravity="center_horizontal"
            android:text="@string/next_btn"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bot_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/dark_blue"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="314dp"
            android:translationZ="135dp"
            app:srcCompat="@drawable/back_arrow"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>