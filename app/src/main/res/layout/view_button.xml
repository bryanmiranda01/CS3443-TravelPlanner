<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-66dp">

        <TextView
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="146dp"
            android:background="@color/dark_blue" />

        <TextView
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/selection1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="50dp"
            android:background="@color/dark_blue"
            android:fontFamily="serif"
            android:text="@string/select_details"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/selection1"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/selection2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="25dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/trip_details"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selection2"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/selection3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="96dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="25dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/pre_trip_check"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selection3"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nextbutton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="100dp"
            android:background="@color/off_white"
            android:fontFamily="serif"
            android:text="@string/luggage_details"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="262dp"
            android:layout_marginEnd="326dp"
            android:layout_marginBottom="450dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="381dp"
            android:layout_marginEnd="326dp"
            android:layout_marginBottom="331dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="324dp"
            android:layout_marginEnd="328dp"
            android:layout_marginBottom="388dp"
            android:contentDescription="@string/star"
            app:srcCompat="@android:drawable/star_big_off" />

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="182dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="115dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="165dp"
            android:background="@color/dark_blue"
            android:contentDescription="@string/next_btn"
            android:gravity="center_horizontal"
            android:text="@string/next_btn"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bot_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/dark_blue"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="315dp"
            android:backgroundTint="@color/dark_blue"
            android:translationZ="270dp"
            app:srcCompat="@drawable/back_arrow" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>